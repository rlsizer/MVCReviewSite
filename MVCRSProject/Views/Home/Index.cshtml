    ViewBag.Title = "Home Page";
}

@**Jumbotron*@
    <div class="jumbotron homejumbotron">
        <div class="homejumbofont">
            <h1>N7</h1>
            <p class="lead">Consumer Reports</p>
        </div>
    </div>

@*Home Buttons*@
    <div class="homebuttons">
    <div class="col-md-4">
        <h2>REVIEWS</h2>
        <p>
            Check out the latest reviews for weapons, armor, and tech! Feel free to write your own reviews about experiences you've had with any weapons, armor, or tech.
        </p>
        <p><a class="btn btn-default" href="~/Reviews">Consumer Reviews &raquo;</a></p>
    </div>
    <div class="col-md-4">
